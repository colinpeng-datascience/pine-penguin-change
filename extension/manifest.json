{
  "manifest_version": 3,
  "name": "Pine Penguin Change",
  "version": "1.0.1",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "description":"Transform all texts online through ChatGPT according to your need.",
  "options_page": "pages/options.html", 
  "homepage_url":"https://github.com/colinpeng-datascience/pine-penguin-change",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
